{
  "name": "admin_backend",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:swagger": "node run-with-swagger.js",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:watch:coverage": "jest --watch --coverage",
    "test:ci": "jest --coverage --ci --watchAll=false",
    "coverage:report": "start coverage/index.html",
    "coverage:test-report": "start coverage/html-report/report.html",
    "seed": "node seeders/seed.js seed",
    "seed:reset": "node seeders/seed.js reset",
    "seed:check": "node seeders/seed.js check",
    "seed:roles": "node seeders/seed.js roles",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:ci": "eslint . --ext .js --format json --output-file eslint-report.json",
    "setup:logs": "node scripts/setup-logs.js",
    "verify:env": "node scripts/verify-env.js",
    "migrate:pending-registrations": "node scripts/create-pending-registrations-table.js",
    "cleanup:pending-registrations": "node scripts/cleanup-pending-registrations.js",
    "prestart": "npm run setup:logs",
    "predev": "npm run setup:logs"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity": "^3.895.0",
    "@aws-sdk/client-cognito-identity-provider": "^3.895.0",
    "@aws-sdk/client-s3": "^3.895.0",
    "@aws-sdk/client-ses": "^3.895.0",
    "@aws-sdk/s3-request-presigner": "^3.895.0",
    "aws-jwt-verify": "^5.1.0",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "body-parser": "^2.2.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "mysql2": "^3.14.3",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.6",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "swagger-ui-express": "^5.0.1",
    "tedious": "^18.6.1",
    "winston": "^3.17.0",
    "winston-cloudwatch": "^6.3.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^30.1.3",
    "jest-html-reporters": "^3.1.7",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "sequelize-cli": "^6.6.3",
    "supertest": "^7.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "services/**/*.js",
      "models/**/*.js",
      "middlewares/**/*.js",
      "utils/**/*.js",
      "routes/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!**/__tests__/**",
      "!**/seeders/**",
      "!**/config/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 45,
        "functions": 50,
        "lines": 60,
        "statements": 60
      }
    },
    "reporters": [
      "default",
      [
        "jest-html-reporters",
        {
          "publicPath": "./coverage/html-report",
          "filename": "report.html",
          "openReport": false,
          "expand": true,
          "hideIcon": false,
          "pageTitle": "Test Coverage Report",
          "includeFailureMsg": true,
          "includeSuiteFailure": true,
          "includeObsoleteSnapshots": true,
          "sort": "status",
          "includeConsoleLog": true,
          "logoImgPath": null,
          "testCommand": "npm test"
        }
      ]
    ],
    "verbose": true
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": ""
}
